{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"outDir": "dist",
		"rootDir": "src",
		"lib": ["ES2020"],
		"types": ["@types/node"],
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"allowJs": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
