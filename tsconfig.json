{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"types": ["@cloudflare/workers-types", "@types/node"],
		"moduleResolution": "node",
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"allowJs": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
